<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/startFragment"
        android:name="com.example.tictactoe_without.fragments.StartFragment"
        android:label="fragment_start"
        tools:layout="@layout/fragment_start" >
        <action
            android:id="@+id/action_startFragment_to_gameFragment"
            app:destination="@id/gameFragment"
            />
        <action
            android:id="@+id/action_startFragment_to_multiplayerFragment"
            app:destination="@id/multiplayerFragment" />
    </fragment>
    <fragment
        android:id="@+id/gameFragment"
        android:name="com.example.tictactoe_without.fragments.GameFragment"
        android:label="fragment_game"
        tools:layout="@layout/fragment_game" >
        <argument
            android:name="simpleGameType"
            android:defaultValue="3"
            app:argType="string"/>
        <action
            android:id="@+id/action_gameFragment_to_startFragment"
            app:destination="@id/startFragment" />
    </fragment>
    <fragment
        android:id="@+id/multiplayerFragment"
        android:name="com.example.tictactoe_without.fragments.MultiplayerFragment"
        android:label="fragment_multiplayer"
        tools:layout="@layout/fragment_multiplayer" >
        <action
            android:id="@+id/action_multiplayerFragment_to_startFragment"
            app:destination="@id/startFragment" />
    </fragment>
</navigation>